<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Order Details' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <a href="/orders" class="inline-block px-3 py-1.5 border border-gray-300 text-xs font-medium text-gray-700 rounded-md hover:bg-gray-50">
            Back to Orders
        </a>
    </div>
</header>

<section class="p-6 flex-1 overflow-y-auto">
     <%# Display Flash Messages or Query Params for errors/success %>
     <% if (typeof error !== 'undefined' && error) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error!</strong> <span class="block sm:inline"><%= error %></span>
        </div>
     <% } %>
     <% if (typeof success_msg !== 'undefined' && success_msg) { %>
        <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Success!</strong> <span class="block sm:inline"><%= success_msg %></span>
        </div>
     <% } %>

     <% if (typeof order !== 'undefined' && order) { %>
        <div class="bg-white p-6 border rounded-lg shadow-sm max-w-4xl mx-auto">
            <%# --- Order Summary Row --- %>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 pb-6 border-b">
                <div> <h3 class="text-xs font-medium uppercase text-gray-500 mb-1">Order ID</h3> <p class="text-sm text-gray-800 font-mono"><%= order._id %></p> </div>
                <div> <h3 class="text-xs font-medium uppercase text-gray-500 mb-1">Date Placed</h3> <p class="text-sm text-gray-800"><%= new Date(order.placedDate).toLocaleString() %></p> </div>
                <div> <h3 class="text-xs font-medium uppercase text-gray-500 mb-1">Status</h3> <span class="inline-block px-2 py-1 text-xs font-medium rounded-full capitalize <% /* Status class logic */ %>"><%= order.orderStatus %></span> </div>
            </div>

            <%# --- Details Row (Customer, Store, Shipping) --- %>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 pb-6 border-b">
                 <div> <h3 class="text-base font-semibold text-gray-700 mb-2">Recipient Details</h3> <p class="text-sm text-gray-600"><strong>Name:</strong> <%= order.customerName || 'N/A' %></p> <p class="text-sm text-gray-600"><strong>Phone:</strong> <%= order.customerPhone || 'N/A' %></p> <% if(order.customerId) { %><p class="text-sm text-gray-600"><strong>User:</strong> <%= order.customerId.username %> (<%= order.customerId.email %>)</p><% } %> </div>
                 <div> <h3 class="text-base font-semibold text-gray-700 mb-2">Store Details</h3> <p class="text-sm text-gray-600"><strong>Name:</strong> <%= order.storeId?.storeName || 'N/A' %></p> <p class="text-sm text-gray-600"><strong>Phone:</strong> <%= order.storeId?.phone || 'N/A' %></p> </div>
                 <div> <h3 class="text-base font-semibold text-gray-700 mb-2">Shipping Address</h3> <p class="text-sm text-gray-600"><%= order.shippingAddress %></p> </div>
            </div>

             <%# --- Order Items Table --- %>
             <div>
                <h3 class="text-base font-semibold text-gray-700 mb-3">Order Items</h3>
                <div class="overflow-x-auto border rounded-md">
                     <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50"> <tr> <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Item</th> <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">SKU</th> <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th> <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th> <th scope="col" class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Subtotal</th> </tr> </thead>
                        <tbody class="bg-white divide-y divide-gray-200 text-sm"> <% order.orderItems.forEach(item => { %> <tr> <td class="px-4 py-2 whitespace-nowrap"><%= item.itemId?.name || 'Item not found' %></td> <td class="px-4 py-2 whitespace-nowrap font-mono text-xs"><%= item.itemId?.sku || 'N/A' %></td> <td class="px-4 py-2 text-right"><%= item.quantity %></td> <td class="px-4 py-2 text-right"><%= item.priceAtOrder.toFixed(2) %></td> <td class="px-4 py-2 text-right font-medium"><%= (item.quantity * item.priceAtOrder).toFixed(2) %></td> </tr> <% }) %> </tbody>
                        <tfoot class="bg-gray-50"> <tr> <td colspan="4" class="px-4 py-2 text-right text-sm font-medium text-gray-700">Total Amount:</td> <td class="px-4 py-2 text-right text-sm font-bold text-gray-900">$<%= order.totalAmount.toFixed(2) %></td> </tr> </tfoot>
                     </table>
                </div>
             </div>

             <%# --- Action Section --- %>
             <% if(allowedActions && (allowedActions.canUpdateStatus || allowedActions.canAssignDelivery)) { %>
                <div class="mt-6 pt-4 border-t">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Actions</h3>
                    <div class="space-y-4">

                        <%# --- Update Status Form (Placeholder) --- %>
                        <% if (allowedActions.canUpdateStatus) { %>
                            <form action="/orders/<%= order._id %>/status?_method=PUT" method="POST"> <%# Requires method-override %>
                                <label for="newStatus" class="block text-sm font-medium text-gray-700 mb-1">Update Status</label>
                                <div class="flex items-center space-x-2">
                                    <select name="newStatus" id="newStatus" class="mt-1 block w-full max-w-xs px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                         <%# Define valid next statuses based on current status %>
                                         <% const currentStatus = order.orderStatus; %>
                                         <% if (currentStatus === 'pending') { %> <option value="confirmed">Confirm</option> <option value="cancelled">Cancel</option> <% } %>
                                         <% if (currentStatus === 'confirmed') { %> <option value="shipped">Ship</option> <option value="cancelled">Cancel</option> <% } %>
                                         <% if (currentStatus === 'shipped') { %> <option value="delivered">Deliver</option> <% } %>
                                         <%# Add other transitions as needed %>
                                    </select>
                                    <button type="submit" class="px-3 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700">Update</button>
                                </div>
                            </form>
                         <% } %>

                         <%# --- Assign Driver Form --- %>
                         <% if (allowedActions.canAssignDelivery) { %>
                              <form action="/orders/<%= order._id %>/assign-driver" method="POST">
                                <label for="driverId" class="block text-sm font-medium text-gray-700 mb-1">
                                    Assign Delivery Partner
                                </label>
                                <% if (order.assignedDeliveryPartnerId) { %>
                                    <p class="text-sm text-gray-600 mb-2"> Currently assigned to: <span class="font-medium"><%= order.assignedDeliveryPartnerId.username %></span> (<a href="#" onclick="event.preventDefault(); document.getElementById('unassign-form-<%= order._id %>').submit();" class="text-red-600 hover:underline">Unassign</a>) </p>
                                <% } %>
                                <div class="flex items-center space-x-2">
                                     <select name="driverId" id="driverId" required class="mt-1 block w-full max-w-xs px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                         <option value="">-- Select Driver --</option> <%# Empty value for unassigning via hidden form %>
                                         <% if (typeof availableDrivers !== 'undefined' && availableDrivers.length > 0) { %>
                                             <% availableDrivers.forEach(driver => { %>
                                                 <option value="<%= driver._id %>" <%= order.assignedDeliveryPartnerId?._id.toString() === driver._id.toString() ? 'selected' : '' %>>
                                                     <%= driver.username %>
                                                 </option>
                                             <% }) %>
                                         <% } else { %>
                                             <option value="" disabled>No available drivers</option>
                                         <% } %>
                                     </select>
                                     <button type="submit" class="px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" <%= !availableDrivers || availableDrivers.length === 0 ? 'disabled' : '' %>>
                                        <%= order.assignedDeliveryPartnerId ? 'Re-assign' : 'Assign' %>
                                    </button>
                                </div>
                             </form>
                             <%# Hidden form for unassign action %>
                             <% if (order.assignedDeliveryPartnerId) { %>
                                <form id="unassign-form-<%= order._id %>" action="/orders/<%= order._id %>/assign-driver" method="POST" class="hidden">
                                    <input type="hidden" name="driverId" value=""> <%# Submit empty driverId to unassign %>
                                </form>
                             <% } %>
                         <% } %>
                    </div>
                 </div>
            <% } %>
            <%# --- Action Section --- %>
            <% if(allowedActions && (allowedActions.canUpdateStatus || allowedActions.canAssignDelivery)) { %>
                <div class="mt-6 pt-4 border-t">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Actions</h3>
                    <div class="space-y-4 md:space-y-0 md:flex md:items-center md:space-x-3"> <%# Use flex for horizontal layout %>
            
                        <%# --- Edit Order Button --- %>
                        <% if (['pending', 'confirmed'].includes(order.orderStatus) && locals.loggedInUser && ['admin', 'warehouse_owner', 'store_owner', 'employee'].includes(loggedInUser.role) && hasAccess) { %>
                            <%# Check status and role - only allow edit before shipping %>
                            <a href="/orders/<%= order._id %>/edit" class="inline-block px-3 py-2 border border-blue-500 text-blue-600 text-sm font-medium rounded-md hover:bg-blue-50">
                                Edit Order Items
                            </a>
                        <% } %>
                        <%# --- End Edit Order Button --- %>
            
            
                        <%# --- Update Status Form (Keep placeholder) --- %>
                        <% if (allowedActions.canUpdateStatus) { %>
                            <form action="/orders/<%= order._id %>/status?_method=PUT" method="POST" class="flex items-center space-x-2"> <%# Requires method-override %>
                                <label for="newStatus" class="text-sm font-medium text-gray-700 whitespace-nowrap">Update Status:</label>
                                <select name="newStatus" id="newStatus" class="block w-full max-w-xs px-3 py-1.5 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm">
                                    <%# Logic to show only valid NEXT statuses %>
                                    <% const current = order.orderStatus; %>
                                    <option value="" disabled selected>Change to...</option>
                                    <% if (current === 'pending') { %> <option value="confirmed">Confirmed</option> <option value="cancelled">Cancelled</option> <% } %>
                                    <% if (current === 'confirmed') { %> <option value="shipped">Shipped</option> <option value="cancelled">Cancelled</option> <% } %>
                                    <% if (current === 'shipped') { %> <option value="delivered">Delivered</option> <% } %>
                                </select>
                                <button type="submit" class="px-3 py-1.5 bg-green-600 text-white text-xs font-medium rounded-md hover:bg-green-700">Update</button>
                            </form>
                         <% } %>
            
                         <%# --- Assign Driver Form (Keep as is) --- %>
                         <% if (allowedActions.canAssignDelivery) { %>
                              <form action="/orders/<%= order._id %>/assign-driver" method="POST" class="flex items-center space-x-2">
                                  <%# ... (Keep Assign driver form elements) ... %>
                             </form>
                             <%# ... (Keep Unassign hidden form) ... %>
                         <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    <% } else { %>
         <p class="text-center text-gray-500">Order data could not be loaded.</p>
    <% } %>
</section>