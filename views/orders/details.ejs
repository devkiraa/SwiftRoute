<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Order Details' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <a href="/orders" class="inline-block px-3 py-1.5 border border-gray-300 text-xs font-medium text-gray-700 rounded-md hover:bg-gray-50">
            Back to Orders
        </a>
    </div>
</header>

<section class="p-6 flex-1 overflow-y-auto">
     <% if (typeof error !== 'undefined' && error) { %> <%# Display errors passed via query param %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline"><%= error %></span>
        </div>
     <% } %>
     <% if (typeof success_msg !== 'undefined' && success_msg) { %> <%# Display success messages %>
        <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline"><%= success_msg %></span>
        </div>
     <% } %>


     <% if (typeof order !== 'undefined' && order) { %>
        <div class="bg-white p-6 border rounded-lg shadow-sm max-w-4xl mx-auto">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 pb-6 border-b"> /* ... */ </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 pb-6 border-b"> /* ... */ </div>

            <div> /* ... */ </div>

            <%# --- Action Section --- %>
            <% if(allowedActions && (allowedActions.canUpdateStatus || allowedActions.canAssignDelivery)) { %>
                <div class="mt-6 pt-4 border-t">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Actions</h3>
                    <div class="space-y-4">

                        <%# --- Update Status Form (Placeholder) --- %>
                        <% if (allowedActions.canUpdateStatus) { %>
                            <form action="/orders/<%= order._id %>/status?_method=PUT" method="POST"> <%# Requires method-override %>
                                <label for="newStatus" class="block text-sm font-medium text-gray-700 mb-1">Update Status</label>
                                <div class="flex items-center space-x-2">
                                    <select name="newStatus" id="newStatus" class="mt-1 block w-full max-w-xs px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                        <option value="confirmed" <%= order.orderStatus === 'confirmed' ? 'selected disabled' : '' %>>Confirmed</option>
                                        <option value="shipped" <%= order.orderStatus === 'shipped' ? 'selected disabled' : '' %>>Shipped</option>
                                        <option value="delivered" <%= order.orderStatus === 'delivered' ? 'selected disabled' : '' %>>Delivered</option>
                                        <option value="cancelled" <%= order.orderStatus === 'cancelled' ? 'selected disabled' : '' %>>Cancelled</option>
                                         <%# Add logic to only show valid next statuses %>
                                    </select>
                                    <button type="submit" class="px-3 py-2 bg-green-600 text-white text-sm font-medium rounded-md hover:bg-green-700">Update</button>
                                </div>
                            </form>
                         <% } %>

                         <%# --- Assign Driver Form --- %>
                         <% if (allowedActions.canAssignDelivery) { %>
                              <form action="/orders/<%= order._id %>/assign-driver" method="POST">
                                <label for="driverId" class="block text-sm font-medium text-gray-700 mb-1">
                                    Assign Delivery Partner
                                </label>
                                <% if (order.assignedDeliveryPartnerId) { %>
                                    <p class="text-sm text-gray-600 mb-2">
                                        Currently assigned to: <span class="font-medium"><%= order.assignedDeliveryPartnerId.username %></span>
                                        (<a href="#" onclick="event.preventDefault(); document.getElementById('unassign-form-<%= order._id %>').submit();" class="text-red-600 hover:underline">Unassign</a>)
                                    </p>
                                <% } %>
                                <div class="flex items-center space-x-2">
                                     <select name="driverId" id="driverId" required class="mt-1 block w-full max-w-xs px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                         <option value="">-- Select Driver --</option>
                                         <% if (typeof availableDrivers !== 'undefined' && availableDrivers.length > 0) { %>
                                             <% availableDrivers.forEach(driver => { %>
                                                 <option value="<%= driver._id %>" <%= order.assignedDeliveryPartnerId?._id.toString() === driver._id.toString() ? 'selected' : '' %>>
                                                     <%= driver.username %>
                                                 </option>
                                             <% }) %>
                                         <% } else { %>
                                             <option value="" disabled>No available drivers found</option>
                                         <% } %>
                                     </select>
                                     <button type="submit" class="px-3 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" <%= !availableDrivers || availableDrivers.length === 0 ? 'disabled' : '' %>>
                                        <%= order.assignedDeliveryPartnerId ? 'Re-assign' : 'Assign' %>
                                    </button>
                                </div>
                             </form>
                             <%# Add hidden form for unassign if needed %>
                             <% if (order.assignedDeliveryPartnerId) { %>
                                <form id="unassign-form-<%= order._id %>" action="/orders/<%= order._id %>/assign-driver" method="POST" class="hidden">
                                    <input type="hidden" name="driverId" value=""> <%# Submit empty driverId to unassign %>
                                </form>
                             <% } %>
                         <% } %>
                    </div>
                 </div>
            <% } %>
        </div>
    <% } else { /* ... order not loaded message ... */ } %>
</section>