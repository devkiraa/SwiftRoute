<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Inventory Items' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <a href="/items/new" class="inline-block px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700">
            Add New Item
        </a>
    </div>
</header>

<section class="px-6 py-6 flex-1 overflow-y-auto">
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b"> <h3 class="text-base ...">All Items</h3> </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b text-xs uppercase ...">
                    <tr>
                        <th class="px-4 py-2 font-medium">SKU</th>
                        <th class="px-4 py-2 font-medium">Name</th>
                        <th class="px-4 py-2 font-medium text-right">Quantity</th> <th class="px-4 py-2 font-medium text-right">Unit Cost</th> <th class="px-4 py-2 font-medium text-right">Selling Price</th> <th class="px-4 py-2 font-medium">Warehouse</th>
                        <th class="px-4 py-2 font-medium">Expiry</th>
                        <th class="px-4 py-2 font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (items && items.length > 0) { %>
                        <% items.forEach(item => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 font-mono text-xs"><%= item.sku %></td>
                                <td class="px-4 py-3 font-medium text-gray-900"><%= item.name %></td>
                                <td class="px-4 py-3 text-right"><%= item.quantity %></td>
                                <td class="px-4 py-3 text-right">₹<%= item.unitPrice?.toFixed(2) || '0.00' %></td> <td class="px-4 py-3 text-right">₹<%= item.sellingPrice?.toFixed(2) || '0.00' %></td> <td class="px-4 py-3"><%= item.warehouseId?.name || 'N/A' %></td>
                                <td class="px-4 py-3"><% /* Expiry date logic */ %></td>
                                <td class="px-4 py-3 whitespace-nowrap">
                                    <a href="/items/<%= item._id %>/edit" class="text-blue-600 ...">Edit</a>
                                    </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="8" class="text-center py-10 ...">No items found.</td></tr> <%# Adjusted colspan %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</section>