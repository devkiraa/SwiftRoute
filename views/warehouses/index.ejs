<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Manage Warehouses' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <div class="flex items-center">
            <% if (typeof error_msg === 'string' && error_msg) { %><div class="mr-4 p-2 text-xs bg-red-100 text-red-700 rounded"><%= error_msg %></div><% } %>
            <% if (typeof success_msg === 'string' && success_msg) { %><div class="mr-4 p-2 text-xs bg-green-100 text-green-700 rounded"><%= success_msg %></div><% } %>
            <a href="/warehouses/new" class="inline-block px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700">
                Add New Warehouse
            </a>
        </div>
    </div>
</header>

<section class="px-6 py-6 flex-1 overflow-y-auto">
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b">
            <h3 class="text-base font-semibold text-gray-700">All Warehouses</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-4 py-2 font-medium">Warehouse Name</th>
                        <th class="px-4 py-2 font-medium">Address</th>
                        <th class="px-4 py-2 font-medium">Phone</th>
                        <th class="px-4 py-2 font-medium">Email</th>
                        <% if (locals.loggedInUser.role === 'admin') { %>
                            <th class="px-4 py-2 font-medium">Company</th>
                        <% } %>
                        <th class="px-4 py-2 font-medium text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (typeof warehouses !== 'undefined' && warehouses.length > 0) { %>
                        <% warehouses.forEach(warehouse => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 font-medium text-gray-900"><%= warehouse.name %></td>
                                <td class="px-4 py-3 text-xs">
                                    <%= warehouse.address?.street %><br>
                                    <%= warehouse.address?.city %>, <%= warehouse.address?.state %> <%= warehouse.address?.pincode %>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap"><%= warehouse.phone || '-' %></td>
                                <td class="px-4 py-3 whitespace-nowrap"><%= warehouse.email || '-' %></td>
                                <% if (locals.loggedInUser.role === 'admin') { %>
                                    <td class="px-4 py-3 whitespace-nowrap"><%= warehouse.companyId?.companyName || 'N/A' %></td>
                                <% } %>
                                <td class="px-4 py-3 whitespace-nowrap text-center space-x-2">
                                    <a href="/warehouses/<%= warehouse._id %>/edit" class="text-blue-600 hover:text-blue-800 hover:underline text-xs font-medium">Edit</a>
                                    <form action="/warehouses/<%= warehouse._id %>?_method=DELETE" method="POST" class="inline" onsubmit="return confirm('Delete warehouse <%= warehouse.name %>? This cannot be undone and will fail if items or orders are assigned.');">
                                        <button type="submit" class="text-red-600 hover:text-red-800 hover:underline text-xs font-medium p-0 border-none bg-transparent cursor-pointer">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                         <% const colSpan = locals.loggedInUser.role === 'admin' ? 6 : 5; %>
                        <tr><td colspan="<%= colSpan %>" class="text-center py-10 text-gray-500">No warehouses found. <a href="/warehouses/new" class="text-blue-600 hover:underline">Add one?</a></td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</section>