<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Manage Warehouses' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <div class="flex items-center">
            <%# Message display from query parameters %>
            <% if (typeof error_msg === 'string' && error_msg && error_msg.trim() !== '') { %>
                <div class="mr-4 p-2 text-xs bg-red-100 border border-red-400 text-red-700 rounded-md">
                    <%= decodeURIComponent(error_msg.replace(/\+/g, ' ')) %>
                </div>
            <% } %>
            <% if (typeof success_msg === 'string' && success_msg && success_msg.trim() !== '') { %>
                <div class="mr-4 p-2 text-xs bg-green-100 border border-green-400 text-green-700 rounded-md">
                    <%= decodeURIComponent(success_msg.replace(/\+/g, ' ')) %>
                </div>
            <% } %>
            <a href="/warehouses/new" class="inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v4h4a1 1 0 110 2h-4v4a1 1 0 11-2 0v-4H5a1 1 0 110-2h4V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add New Warehouse
            </a>
        </div>
    </div>
</header>

<section class="px-6 py-6 flex-1 overflow-y-auto">
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 sm:px-6 py-3 border-b">
            <h3 class="text-base font-semibold text-gray-700">All Warehouses</h3>
            <%# Add Filters/Search Bar here later if needed %>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full w-full text-left">
                <thead class="bg-gray-50 border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th scope="col" class="px-4 sm:px-6 py-3 font-medium">Warehouse Name</th>
                        <th scope="col" class="px-4 sm:px-6 py-3 font-medium">Address</th>
                        <th scope="col" class="px-4 sm:px-6 py-3 font-medium">Phone</th>
                        <th scope="col" class="px-4 sm:px-6 py-3 font-medium">Email</th>
                        <% if (locals.loggedInUser && locals.loggedInUser.role === 'admin') { %>
                            <th scope="col" class="px-4 sm:px-6 py-3 font-medium">Company</th>
                        <% } %>
                        <th scope="col" class="px-4 sm:px-6 py-3 font-medium text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 text-sm text-gray-700">
                    <% if (typeof warehouses !== 'undefined' && warehouses.length > 0) { %>
                        <% warehouses.forEach(warehouse => { %>
                            <tr class="hover:bg-gray-50 transition-colors duration-150">
                                <td class="px-4 sm:px-6 py-3 font-medium text-gray-900 whitespace-nowrap"><%= warehouse.name %></td>
                                <td class="px-4 sm:px-6 py-3 text-xs">
                                    <% if (warehouse.address) { %>
                                        <%= warehouse.address.street || '' %><br>
                                        <%= warehouse.address.city || '' %>, <%= warehouse.address.state || '' %> <%= warehouse.address.pincode || '' %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                                </td>
                                <td class="px-4 sm:px-6 py-3 whitespace-nowrap"><%= warehouse.phone || '-' %></td>
                                <td class="px-4 sm:px-6 py-3 whitespace-nowrap"><%= warehouse.email || '-' %></td>
                                <% if (locals.loggedInUser && locals.loggedInUser.role === 'admin') { %>
                                    <td class="px-4 sm:px-6 py-3 whitespace-nowrap"><%= warehouse.companyId?.companyName || 'N/A' %></td>
                                <% } %>
                                <td class="px-4 sm:px-6 py-3 whitespace-nowrap text-center space-x-2">
                                    <a href="/warehouses/<%= warehouse._id %>/edit" 
                                       class="text-indigo-600 hover:text-indigo-900 hover:underline text-xs font-medium"
                                       title="Edit <%= warehouse.name %>">Edit</a>
                                    <form action="/warehouses/<%= warehouse._id %>?_method=DELETE" method="POST" class="inline" 
                                          onsubmit="return confirm('Are you sure you want to delete warehouse: <%= warehouse.name.replace(/'/g, '\\\'') %>? This cannot be undone and will fail if items or orders are assigned to it.');">
                                        <button type="submit" 
                                                class="text-red-600 hover:text-red-900 hover:underline text-xs font-medium p-0 border-none bg-transparent cursor-pointer"
                                                title="Delete <%= warehouse.name %>">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <% const colSpan = (locals.loggedInUser && locals.loggedInUser.role === 'admin') ? 6 : 5; %>
                        <tr>
                            <td colspan="<%= colSpan %>" class="text-center py-10 text-gray-500">
                                No warehouses found. 
                                <a href="/warehouses/new" class="text-blue-600 hover:underline">Add a new warehouse?</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
         <%# TODO: Add Pagination Controls if list becomes long %>
    </div>
</section>