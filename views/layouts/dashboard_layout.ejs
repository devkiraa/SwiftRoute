      <div class="relative mt-auto px-4 py-3 border-t border-gray-200">
         <% if (locals.loggedInUser) { %>
            <button id="profileToggle" class="w-full flex items-center justify-start space-x-3 focus:outline-none rounded-md p-2 hover:bg-gray-100" onclick="toggleProfileDropdown()" aria-expanded="false" aria-controls="profileDropdown">
                <img src="<%= loggedInUser.avatarUrl || '...' %>" alt="Avatar" class="w-9 h-9 rounded-full bg-gray-200 object-cover flex-shrink-0"/>
                <div class="text-left overflow-hidden flex-1">
                    <p class="text-sm font-medium text-gray-800 truncate"><%= loggedInUser.username %></p>
                    <p class="text-xs text-gray-500 truncate"><%= companyDetails ? companyDetails.companyName : (storeDetails ? storeDetails.storeName : 'N/A') %></p>
