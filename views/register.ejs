<% locals.pageTitle = typeof title !== 'undefined' ? title : 'Reports' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <div>
            <% if (['warehouse_owner', 'admin', 'store_owner', 'employee'].includes(locals.loggedInUser.role)) { %>
                <a href="/reporting/sales-summary/csv"
                   class="inline-flex items-center px-3 py-1.5 border border-green-600 text-xs font-medium rounded-md text-green-700 bg-green-50 hover:bg-green-100">
                    <svg class="-ml-0.5 mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" /></svg>
                    Download Sales CSV
                </a>
            <% } %>
        </div>
    </div>
</header>

<section class="p-6 flex-1 overflow-y-auto space-y-6">
    <% if (reportData && reportData.error) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
            <strong class="font-bold">Report Error!</strong> <span class="block sm:inline"><%= reportData.error %></span>
        </div>
    <% } %>

    <% if (reportData && !reportData.error) { %>

        <%# --- Warehouse Owner / Admin Reports --- %>
        <% if (['warehouse_owner', 'admin'].includes(reportData.type)) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div class="bg-white border rounded-lg shadow-sm p-4">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Sales & Profit Summary</h3>
                    <dl class="space-y-2">
                        <div> <dt class="text-sm font-medium text-gray-500">Total Revenue (Delivered)</dt> <dd class="mt-1 text-xl font-semibold text-gray-900">₹<%= reportData.salesSummary?.totalRevenue?.toFixed(2) || '0.00' %></dd> </div>
                        <div> <dt class="text-sm font-medium text-gray-500">Total Cost of Goods Sold (COGS)</dt> <dd class="mt-1 text-xl font-semibold text-gray-900">₹<%= reportData.pnlSummary?.totalCOGS?.toFixed(2) || '0.00' %></dd> </div>
                        <div> <dt class="text-sm font-medium text-green-600">Gross Profit</dt> <dd class="mt-1 text-xl font-semibold text-green-700">₹<%= reportData.pnlSummary?.grossProfit?.toFixed(2) || '0.00' %></dd> </div>
                    </dl>
                </div>

                <div class="bg-white border rounded-lg shadow-sm p-4">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Orders by Status</h3>
                    <% if (reportData.orderStatusCounts && reportData.orderStatusCounts.length > 0) { %>
                         <ul class="space-y-2"> <% reportData.orderStatusCounts.forEach(status => { %> <li class="flex justify-between text-sm"> <span class="capitalize font-medium text-gray-600"><%= status._id %>:</span> <span class="font-semibold text-gray-800"><%= status.count %></span> </li> <% }) %> </ul>
                    <% } else { %> <p class="text-sm text-gray-500">No order data.</p> <% } %>
                </div>

                <div class="bg-white border rounded-lg shadow-sm p-4">
                    <h3 class="text-base font-semibold text-gray-700 mb-3">Inventory Summary</h3>
                    <% if (reportData.inventorySummary) { %>
                        <dl class="space-y-2">
                             <div> <dt class="text-sm font-medium text-gray-500">Total Stock Quantity</dt> <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reportData.inventorySummary.totalItems %></dd> </div>
                             <div> <dt class="text-sm font-medium text-gray-500">Distinct SKUs</dt> <dd class="mt-1 text-xl font-semibold text-gray-900"><%= reportData.inventorySummary.distinctSKUs %></dd> </div>
                             <div> <dt class="text-sm font-medium text-gray-500">Total Inventory Value (at Cost)</dt> <dd class="mt-1 text-xl font-semibold text-gray-900">₹<%= reportData.inventorySummary.totalCostValue?.toFixed(2) || '0.00' %></dd> </div>
                        </dl>
                    <% } else { %> <p class="text-sm text-gray-500">No inventory data.</p> <% } %>
                </div>
            </div>
            <%# TODO: Add more detailed tables below, like Top Selling Items, Low Stock Items, etc. %>
        <% } %>

        <%# --- Store Owner / Employee Reports (Keep as is or enhance) --- %>
        <% if (['store_owner', 'employee', 'warehouse_owner'].includes(reportData.type)) { %>
             <% } %>

        <%# --- Delivery Partner Reports (Keep as is or enhance) --- %>
        <% if (reportData.type === 'delivery_partner') { %>
            <% } %>

    <% } else { %>
        <div class="bg-white border rounded-lg shadow-sm p-6 text-center">
             <p class="text-gray-600">Could not load report data or no data available for your role.</p>
        </div>
    <% } %>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Order Status Chart
        const orderStatusChartCtx = document.getElementById('orderStatusChart');
        <% if (typeof reportData !== 'undefined' && reportData.chartData?.orderStatus?.labels?.length > 0) { %>
            new Chart(orderStatusChartCtx, {
                type: 'bar', // Or 'doughnut' or 'pie'
                data: {
                    labels: <%- JSON.stringify(reportData.chartData.orderStatus.labels) %>,
                    datasets: [{
                        label: 'Order Count',
                        data: <%- JSON.stringify(reportData.chartData.orderStatus.data) %>,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',  // Red
                            'rgba(54, 162, 235, 0.2)', // Blue
                            'rgba(255, 206, 86, 0.2)', // Yellow
                            'rgba(75, 192, 192, 0.2)', // Green
                            'rgba(153, 102, 255, 0.2)',// Purple
                            'rgba(255, 159, 64, 0.2)'  // Orange
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false, // Important for fixed height container
                    scales: {
                        y: { beginAtZero: true, ticks: { stepSize: 1 } } // Ensure y-axis starts at 0 and has integer steps
                    },
                    plugins: {
                        legend: { display: false } // Hide legend for cleaner look, or position it
                    }
                }
            });
        <% } %>
    });
</script>