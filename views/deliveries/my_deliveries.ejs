<% locals.pageTitle = typeof title !== 'undefined' ? title : 'My Deliveries & Loading List' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <a href="/deliveries/map" class="inline-block px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700">
             View Route Map
         </a>
    </div>
</header>

<section class="p-6 flex-1 overflow-y-auto space-y-6">
    <% if (typeof error !== 'undefined' && error) { %> <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative max-w-4xl mx-auto" role="alert"><strong class="font-bold">Error!</strong> <span class="block sm:inline"><%= error %></span></div> <% } %>
    <% if (typeof success_msg !== 'undefined' && success_msg) { %> <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative max-w-4xl mx-auto" role="alert"><strong class="font-bold">Success!</strong> <span class="block sm:inline"><%= success_msg %></span></div> <% } %>

    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg">
            <h3 class="text-base font-semibold text-gray-700"> Loading List from Warehouse: <%= originWarehouse?.name || 'N/A' %> </h3>
            <p class="text-xs text-gray-500"><%= originWarehouse?.address || 'Address not available' %></p>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-4 py-2 font-medium">SKU</th>
                        <th class="px-4 py-2 font-medium">Item Name</th>
                        <th class="px-4 py-2 font-medium text-right">Total Quantity Needed</th>
                        </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (typeof aggregatedItems !== 'undefined' && aggregatedItems.length > 0) { %>
                        <% aggregatedItems.forEach(item => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-2 font-mono text-xs"><%= item.sku %></td>
                                <td class="px-4 py-2 font-medium text-gray-900"><%= item.name %></td>
                                <td class="px-4 py-2 font-semibold text-gray-800 text-right"><%= item.neededQuantity %></td>
                                </tr>
                        <% }) %>
                    <% } else if (showPickupButton) { %>
                         <tr><td colspan="3" class="text-center py-4 text-yellow-600">Could not aggregate items for pickup. Check orders.</td></tr>
                    <% } else { %>
                         <tr><td colspan="3" class="text-center py-4 text-gray-500">No items currently need to be loaded for pickup.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% if (showPickupButton) { %>
            <div class="p-4 border-t bg-gray-50 rounded-b-lg flex justify-between items-center">
                <button type="button" class="px-3 py-1.5 border border-yellow-400 text-yellow-700 bg-yellow-50 text-xs font-medium rounded-md hover:bg-yellow-100">
                    Report Loading Issue
                </button>
                <form action="/deliveries/batch-pickup" method="POST" onsubmit="return confirm('Confirm all items loaded and mark <%= ordersForPickup.length %> order(s) as picked up?');">
                    <button type="submit" class="px-4 py-2 bg-orange-500 text-white text-sm font-semibold rounded-md hover:bg-orange-600">
                        Confirm All Picked Up & Start Route
                    </button>
                </form>
            </div>
        <% } %>
    </div> <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg">
            <h3 class="text-base font-semibold text-gray-700">Deliveries In Progress (Status: Shipped)</h3>
        </div>
         <div class="overflow-x-auto">
             <table class="w-full text-left">
                 <thead class="bg-gray-50 border-b text-xs uppercase text-gray-500 tracking-wider"> <tr> <th class="px-4 py-2 font-medium">Order ID</th> <th class="px-4 py-2 font-medium">Store</th> <th class="px-4 py-2 font-medium">Recipient</th> <th class="px-4 py-2 font-medium">Address</th> <th class="px-4 py-2 font-medium">Actions</th> </tr> </thead>
                 <tbody class="divide-y text-sm text-gray-700">
                    <% if (typeof ordersInProgress !== 'undefined' && ordersInProgress.length > 0) { %>
                        <% ordersInProgress.forEach(order => { %>
                             <tr class="hover:bg-gray-50">
                                 <td class="px-4 py-3 font-mono text-xs">...<%= order._id.toString().slice(-8) %></td>
                                 <td class="px-4 py-3"><%= order.storeId?.storeName || 'N/A' %></td>
                                 <td class="px-4 py-3"><%= order.customerName || 'N/A' %></td>
                                 <td class="px-4 py-3"><%= order.shippingAddress %></td>
                                 <td class="px-4 py-3 whitespace-nowrap">
                                     <a href="/orders/<%= order._id %>" class="text-blue-600 hover:underline text-xs font-medium mr-2">Details</a>
                                     <form action="/deliveries/<%= order._id %>/delivered" method="POST" class="inline" onsubmit="return confirm('Mark order as delivered?');"> <button type="submit" class="text-green-600 hover:underline text-xs font-medium">Mark Delivered</button> </form>
                                 </td>
                             </tr>
                         <% }) %>
                     <% } else { %>
                         <tr><td colspan="5" class="text-center py-6 text-gray-500">No deliveries currently in progress.</td></tr>
                     <% } %>
                 </tbody>
             </table>
        </div>
    </div> <% if (typeof ordersForPickup !== 'undefined' && ordersForPickup.length > 0 && !showPickupButton) { %>
        <% } %>

</section>