<%# views/deliveries/my_deliveries.ejs %>
<% locals.pageTitle = typeof title !== 'undefined' ? title : 'My Deliveries' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
        <%# Add any header actions if needed %>
        <div></div> 
    </div>
</header>

<section class="p-6 flex-1 overflow-y-auto space-y-6">
    <%# Display Messages from Query Parameters %>
    <% if (typeof error_msg === 'string' && error_msg.length > 0) { %>
        <div class="mb-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md relative max-w-4xl mx-auto" role="alert">
            <strong class="font-bold">Error:</strong> 
            <span class="block sm:inline"><%= decodeURIComponent(error_msg.replace(/\+/g, ' ')) %></span>
            <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.remove();">
                <span class="text-red-500 text-xl leading-none">&times;</span>
            </button>
        </div>
    <% } %>
    <% if (typeof success_msg === 'string' && success_msg.length > 0) { %>
        <div class="mb-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md relative max-w-4xl mx-auto" role="alert">
            <strong class="font-bold">Success:</strong> 
            <span class="block sm:inline"><%= decodeURIComponent(success_msg.replace(/\+/g, ' ')) %></span>
            <button type="button" class="absolute top-0 bottom-0 right-0 px-4 py-3" onclick="this.parentElement.remove();">
                <span class="text-green-500 text-xl leading-none">&times;</span>
            </button>
        </div>
    <% } %>

    <div class="bg-white p-4 border rounded-lg shadow-sm">
        <div class="flex flex-wrap justify-between items-start gap-4">
            <div> <%# Vehicle Info & Actions Column %>
                <h3 class="text-base font-semibold text-gray-700 mb-2">Current Vehicle & Trip Status</h3>
                <% if (currentVehicle) { %>
                    <%# Vehicle is selected %>
                    <p class="text-sm text-gray-800 mb-1">
                        Using: <span class="font-semibold"><%= currentVehicle.vehicleNumber %></span> (<%= currentVehicle.modelName %>)
                    </p>
                    <p class="text-xs text-gray-500 mb-3">Last Odometer: <%= currentVehicle.currentOdometer %> km</p>
                    
                    <% if (activeTrip) { %>
                        <%# Trip is ACTIVE %>
                        <div class="mb-3 p-3 bg-blue-50 border border-blue-200 rounded-md">
                            <p class="text-sm font-medium text-blue-800">Trip Active!</p>
                            <p class="text-xs text-blue-700">Started: <%= new Date(activeTrip.tripStartDate).toLocaleString() %></p>
                            <p class="text-xs text-blue-700">Start Odometer: <%= activeTrip.startOdometer %> km</p>
                             <form action="/deliveries/trip/end" method="POST" class="mt-2">
                                 <label for="endOdometer" class="block text-xs font-medium text-gray-700 mb-1">End Odometer (km) <span class="text-red-500">*</span></label>
                                 <div class="flex items-center space-x-2">
                                    <input type="number" id="endOdometer" name="endOdometer" placeholder="Current Reading" required min="<%= activeTrip.startOdometer %>" 
                                           class="px-2 py-1 border border-gray-300 rounded text-xs w-32">
                                    <button type="submit" class="px-3 py-1 bg-red-500 text-white text-xs font-medium rounded-md hover:bg-red-600">End Trip</button>
                                 </div>
                             </form>
                        </div>
                        <%# Release vehicle while trip active? Maybe disallow or show warning? %>
                        <p class="text-xs text-gray-500 italic">(Release vehicle disabled while trip is active. Please end the trip first.)</p>

                    <% } else { %>
                        <%# Vehicle selected, NO active trip - Show Start Trip Form %>
                        <form action="/deliveries/trip/start" method="POST" class="mt-3 space-y-2 p-3 bg-green-50 border border-green-200 rounded-md">
                            <label for="startOdometer" class="block text-sm font-medium text-green-800">Start New Trip?</label>
                            <div class="flex items-center space-x-2">
                                <input type="number" id="startOdometer" name="startOdometer" 
                                       required min="<%= currentVehicle.currentOdometer %>" 
                                       value="<%= currentVehicle.currentOdometer %>" 
                                       class="block w-32 px-3 py-1.5 border border-gray-300 rounded-md shadow-sm sm:text-sm" 
                                       placeholder="Start Odo (km)">
                                <button type="submit" class="px-3 py-1.5 bg-green-600 text-white text-xs font-medium rounded-md hover:bg-green-700">Start Trip</button>
                            </div>
                            <p class="text-xs text-gray-500">Enter current odometer reading to begin.</p>
                        </form>
                        <form action="/deliveries/vehicle/release" method="POST" class="inline mt-2">
                           <button type="submit" class="px-3 py-1.5 bg-yellow-500 text-white text-xs font-medium rounded-md hover:bg-yellow-600" title="Release vehicle without starting trip"> Release Vehicle </button>
                       </form>
                    <% } %>

                <% } else if (availableVehicles && availableVehicles.length > 0) { %>
                    <%# No vehicle selected, but available ones exist %>
                    <form action="/deliveries/vehicle/select" method="POST" class="space-y-2">
                         <div>
                             <label for="vehicleId" class="block text-sm font-medium text-gray-700">Select Available Vehicle:</label>
                             <select name="vehicleId" id="vehicleId" required class="mt-1 block w-full max-w-xs px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                 <option value="">-- Choose Vehicle --</option>
                                 <% availableVehicles.forEach(v => { %>
                                     <option value="<%= v._id %>"><%= v.vehicleNumber %> - <%= v.modelName %></option>
                                 <% }); %>
                             </select>
                         </div>
                         <button type="submit" class="px-3 py-2 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700">Select Vehicle</button>
                    </form>
                <% } else { %>
                    <%# No vehicle selected AND none available %>
                    <p class="text-sm text-red-600 italic">No vehicle selected & none available!</p>
                    <p class="text-xs text-gray-500 mt-1">Cannot start deliveries or log fuel.</p>
                <% } %>
            </div>
            <%# Fuel Log Button - Show only if a vehicle is selected %>
            <% if (currentVehicle) { %> 
                <a href="/deliveries/vehicle/fuel-log/new" class="inline-block flex-shrink-0 px-3 py-1.5 bg-purple-600 text-white text-xs font-medium rounded-md hover:bg-purple-700 self-start mt-2 sm:mt-0">
                    Log Fuel Entry
                </a>
            <% } %>
        </div>
    </div>
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg">
            <h3 class="text-base font-semibold text-gray-700">
                Loading List for Pickup (<%= ordersForPickup ? ordersForPickup.length : 0 %> Orders)
            </h3>
            <% if (originWarehouse) { %><p class="text-xs text-gray-500">From: <%= originWarehouse.name %></p><% } %>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-4 py-2 font-medium">SKU</th>
                        <th class="px-4 py-2 font-medium">Item Name</th>
                        <th class="px-4 py-2 font-medium text-right">Quantity Needed</th>
                    </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (showPickupButton && aggregatedItems && aggregatedItems.length > 0) { %>
                        <% aggregatedItems.forEach(item => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-2 font-mono text-xs"><%= item.sku %></td>
                                <td class="px-4 py-2 font-medium text-gray-900"><%= item.name %></td>
                                <td class="px-4 py-2 font-semibold text-gray-800 text-right"><%= item.neededQuantity %></td>
                            </tr>
                        <% }); %>
                    <% } else if (showPickupButton && (!aggregatedItems || aggregatedItems.length === 0)) { %>
                        <tr><td colspan="3" class="text-center py-4 text-yellow-600">Could not load item details for pickup list.</td></tr>
                    <% } else { %>
                        <tr><td colspan="3" class="text-center py-4 text-gray-500">No orders currently awaiting pickup.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <% if (ordersForPickup && ordersForPickup.length > 0) { %>
             <div class="p-4 border-t bg-gray-50 rounded-b-lg flex justify-end items-center">
                  <% if (!currentVehicle) { %>
                      <p class="text-sm text-red-600 font-medium mr-4">Please select a vehicle to start pickup.</p>
                  <% } else if (!activeTrip) { %>
                      <p class="text-sm text-orange-600 font-medium mr-4">Please start a trip to enable pickup.</p>
                  <% } %>
                 <form action="/deliveries/batch-pickup" method="POST" onsubmit="return confirm('Confirm all items loaded and mark <%= ordersForPickup.length %> order(s) as picked up? This will deduct stock.');">
                     <button type="submit" 
                             class="px-4 py-2 bg-orange-500 text-white text-sm font-semibold rounded-md hover:bg-orange-600 disabled:opacity-50 disabled:cursor-not-allowed"
                             <%= !currentVehicle || !activeTrip ? 'disabled' : '' %> <%# Disable if no vehicle OR no active trip %>
                             title="<%= !currentVehicle ? 'Select a vehicle first' : (!activeTrip ? 'Start a trip first' : 'Confirm pickup and start route') %>"> 
                         Confirm All Picked Up & Start Route
                     </button>
                 </form>
             </div>
         <% } %>
    </div>
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b bg-gray-50 rounded-t-lg">
            <h3 class="text-base font-semibold text-gray-700">Deliveries In Progress (<%= ordersInProgress ? ordersInProgress.length : 0 %>)</h3>
             <p class="text-xs text-gray-500">Orders currently marked as 'Shipped'. Update status upon successful delivery.</p>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left">
                 <thead class="bg-gray-50 border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-4 py-2 font-medium">Order ID</th>
                        <th class="px-4 py-2 font-medium">Store</th>
                        <th class="px-4 py-2 font-medium">Recipient</th>
                        <th class="px-4 py-2 font-medium">Address</th>
                        <th class="px-4 py-2 font-medium text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (typeof ordersInProgress !== 'undefined' && ordersInProgress.length > 0) { %>
                        <% ordersInProgress.forEach(order => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 font-mono text-xs">...<%= order._id.toString().slice(-8) %></td>
                                <td class="px-4 py-3"><%= order.storeId?.storeName || 'N/A' %></td>
                                <td class="px-4 py-3"><%= order.customerName || 'N/A' %></td>
                                <td class="px-4 py-3 text-xs"><%= order.shippingAddress %></td>
                                <td class="px-4 py-3 whitespace-nowrap text-center">
                                    <a href="/orders/<%= order._id %>" class="text-blue-600 hover:underline text-xs font-medium mr-3" title="View Order Details">Details</a>
                                    <form action="/deliveries/<%= order._id %>/delivered" method="POST" class="inline" onsubmit="return confirm('Mark order as delivered?');"> 
                                        <button type="submit" class="text-green-600 hover:underline text-xs font-medium" title="Mark as Delivered">Delivered</button> 
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr><td colspan="5" class="text-center py-6 text-gray-500">No deliveries currently in progress.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    </section>