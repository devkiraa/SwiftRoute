<% locals.pageTitle = typeof title !== 'undefined' ? title : 'My Deliveries' %>

<header class="py-3 px-6 border-b border-gray-200 bg-white shadow-sm flex-shrink-0">
    <div class="flex items-center justify-between">
        <h2 class="text-lg font-semibold text-gray-800"><%= locals.pageTitle %></h2>
         <a href="/deliveries/map" class="inline-block px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700">
             View Route Map
         </a>
    </div>
</header>

<section class="px-6 py-6 flex-1 overflow-y-auto">
    <div class="bg-white border rounded-lg shadow-sm">
        <div class="px-4 py-3 border-b">
            <h3 class="text-base font-semibold text-gray-700">Deliveries Assigned to You</h3>
            <%# Add filters later (e.g., today's deliveries) %>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 border-b text-xs uppercase text-gray-500 tracking-wider">
                    <tr>
                        <th class="px-4 py-2 font-medium">Order ID</th>
                        <th class="px-4 py-2 font-medium">Store</th>
                        <th class="px-4 py-2 font-medium">Recipient Name</th>
                        <th class="px-4 py-2 font-medium">Shipping Address</th>
                        <th class="px-4 py-2 font-medium">Status</th>
                        <th class="px-4 py-2 font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y text-sm text-gray-700">
                    <% if (orders && orders.length > 0) { %>
                        <% orders.forEach(order => { %>
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 font-mono text-xs"><%= order._id.toString().slice(-8) %>...</td>
                                <td class="px-4 py-3"><%= order.storeId?.storeName || 'N/A' %></td>
                                <td class="px-4 py-3"><%= order.customerName || 'N/A' %></td>
                                <td class="px-4 py-3"><%= order.shippingAddress %></td>
                                <td class="px-4 py-3">
                                    <% let statusClass = 'bg-gray-100 text-gray-800'; switch (order.orderStatus) { case 'confirmed': statusClass = 'bg-blue-100 text-blue-800'; break; case 'shipped': statusClass = 'bg-purple-100 text-purple-800'; break; case 'delivered': statusClass = 'bg-green-100 text-green-800'; break; } %>
                                    <span class="inline-block px-2 py-1 text-xs font-medium rounded-full capitalize <%= statusClass %>"> <%= order.orderStatus %> </span>
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap">
                                    <a href="/orders/<%= order._id %>" class="text-blue-600 hover:text-blue-800 hover:underline text-xs font-medium mr-2">Details</a>
                                    <%# Add buttons for 'Mark Picked Up' / 'Mark Delivered' later %>
                                    <% if(order.orderStatus === 'confirmed') { %>
                                         <%# <button class="text-orange-600 hover:underline text-xs font-medium">Pickup</button> %>
                                    <% } else if (order.orderStatus === 'shipped') { %>
                                         <%# <button class="text-green-600 hover:underline text-xs font-medium">Deliver</button> %>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="6" class="text-center py-10 text-gray-500">You have no deliveries currently assigned or in progress.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
         <%# Add Pagination later %>
    </div>
</section>