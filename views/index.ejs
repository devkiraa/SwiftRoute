    <script>
        // Mobile Menu Toggle
        const menuButton = document.getElementById('mobile-menu-button');
        const mobileNav = document.getElementById('mobile-nav-links');

        menuButton.addEventListener('click', () => {
            const isExpanded = menuButton.getAttribute('aria-expanded') === 'true' || false;
            menuButton.setAttribute('aria-expanded', !isExpanded);
            mobileNav.classList.toggle('hidden');
            mobileNav.classList.toggle('block');

            if (!isExpanded) { // If menu is now open
                menuButton.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>`;
                menuButton.setAttribute('aria-label', 'Close Menu');
            } else { // If menu is now closed
                menuButton.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>`;
                menuButton.setAttribute('aria-label', 'Open Menu');
            }
        });

        // Close mobile menu when a link is clicked
        const navLinks = mobileNav.querySelectorAll('a');
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                if (mobileNav.classList.contains('block')) { 
                    menuButton.setAttribute('aria-expanded', 'false');
                    mobileNav.classList.add('hidden');
                    mobileNav.classList.remove('block'); 
                    menuButton.innerHTML = `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>`;
                    menuButton.setAttribute('aria-label', 'Open Menu');
                }
            });
        });

        // Dynamic Year in Footer & Pricing Logic
        document.addEventListener('DOMContentLoaded', () => {
            // Set current year in footer
            const yearSpan = document.getElementById('currentYear');
            if (yearSpan) {
                yearSpan.textContent = new Date().getFullYear();
            }

            // Pricing Country Selector Logic
            const countrySelector = document.getElementById('country-selector');
            const priceValueElements = document.querySelectorAll('.price-value');
            const priceCurrencyElements = document.querySelectorAll('.price-currency');

            function updatePrices() {
                const selectedOption = countrySelector.options[countrySelector.selectedIndex];
                const countryCode = selectedOption.value.toLowerCase(); // e.g., 'us', 'in'
                const currencySymbol = selectedOption.dataset.currency;

                priceValueElements.forEach(el => {
                    const price = el.dataset[`price-${countryCode}`];
                    if (price) {
                        el.textContent = price;
                    }
                });
                priceCurrencyElements.forEach(el => {
                    el.textContent = currencySymbol;
                });
            }

            if (countrySelector) {
                // Default selected country to India (IN)
                countrySelector.value = "IN"; 
                updatePrices(); // Initial price update based on the new default

                // Add event listener for changes
                countrySelector.addEventListener('change', updatePrices);
            }
        });
    </script>

